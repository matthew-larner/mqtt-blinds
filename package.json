{
  "name": "philips-dynalite-mqtt",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:matthew-larner/philips-dynalite-mqtt.git"
  },
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "start": "if-env NODE_ENV=local && npm run start:dev || npm run start:prod",
    "start:prod": "node ./dist/index.js",
    "start:dev": "tsc-watch --onSuccess \"npm run start:prod\" ",
    "build": "./node_modules/typescript/bin/tsc -p ./tsconfig.json"
  },
  "dependencies": {
    "if-env": "^1.0.4",
    "mqtt": "^4.2.6",
    "sqlite3": "^5.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^3.8.3",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@types/mqtt": "^2.5.0",
    "@types/yaml": "^1.9.7",
    "tsc-watch": "^4.2.8"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/configs/*.ts",
      "**/data/*.ts",
      "**/*.d.ts",
      "**/enums/**/*.ts",
      "**/models/**/*.ts",
      "**/entities/**/*.ts",
      "**/repositories/**/*.ts",
      "**/lib/secrets/*.ts",
      "**/lib/db/*.ts",
      "**/lib/utils/*.ts"
    ],
    "reporter": [
      "text"
    ],
    "all": true,
    "check-coverage": true,
    "branches": 90,
    "lines": 90,
    "functions": 90,
    "statements": 90
  }
}
